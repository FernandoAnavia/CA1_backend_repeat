
<!--include header-->
<%- include('include/_header') %>
<!--/include header-->

    <!--Main Site-->
<main id="site-main">
    <div class="container">
        <div class="box-nav-flex justify-between">
            <div class="filter">
                <a href="/"> <i class="fas fa-angle-double-left"></i> All Animals</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Animal</h2>
            <span class="text-light">Use the below form to update an Animal info</span>
        </div>
        

        <form method="POST" id="update_animal">
            <div class="new_animal">

                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name="Id" value="<%= animal._id%>">
                    <input type="text" name="name" value="<%= animal.name%>" placeholder="text">
                </div>
                <div class="form-group">
                    <label for="irishName" class="text-light">Irish Name</label>
                    <input type="text" name="irishName" value="<%= animal.irishName%>" placeholder="text">
                </div>
                <div class="form-group">
                    <label for="animalClass" class="text-light">Animal Class</label>
                    <input type="text" name="animalClass" value="<%= animal.animalClass%>" placeholder="text">
                </div>
                <div class="form-group">
                    <label for="animalOrder" class="text-light">Animal Order</label>
                    <input type="text" name="animalOrder" value="<%= animal.animalOrder%>" placeholder="text">
                </div>
                <div class="form-group">
                    <label for="groupName" class="text-light">Group Name</label>
                    <input type="text" name="groupName" value="<%= animal.groupName%>" placeholder="text">
                </div>
                <div class="form-group">
                    <label for="iucn" class="text-light">IUCN status</label>
                    <input type="text" name="iucn" value="<%= animal.iucn%>" placeholder="text">
                </div>
                <div class="form-group">
                    <label for="arrivalDate" class="text-light">Arrival Date: </label>
                    <input type="date" name="arrivalDate" value="<%= moment(animal.arrivalDate).format('YYYY-MM-DD') %>">
                </div>
                <div class="form-group">
                    <label for="description" class="text-light">Description</label>
                    <input type="text" name="description" value="<%= animal.description%>" placeholder="text">
                </div>
                <div class="form-group">
                    <label for="status" class="text-light">Status</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="status" value="Active" <%= animal.status == 'Active' ? 'checked':'' %> >
                        <label for="radio-2" class="radio-label">Active</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="status" value="Inactive" <%= animal.status == 'Inactive' ? 'checked':'' %> >
                        <label for="radio-3" class="radio-label">Inactive</label>
                    </div>    
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
        
            </div>
        </form>
    

    </div>
</main>
<!--/Main Site-->





<!--include footer-->
<%- include('include/_footer') %>
<!--/include footer-->