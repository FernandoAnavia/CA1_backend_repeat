
<!--include header-->
    <%- include('include/_header') %>
<!--/include header-->

    <!--Main Site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav-flex justify-between">
                <a href="/add-animal" class="border-shadow">
                    <span class="text-gradient">New Animal <i class="fa fa-map-signs" aria-hidden="true"></i></span>
                </a>
            </div>

            <!--form handling-->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Irish Name</th>
                            <th>Animal Class</th>
                            <th>Animal Order</th>
                            <th>Group Name</th>
                            <th>IUCN Status</th>
                            <th>Arrival Date</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--include show-->
                        <%- include('include/_show') %>
                        <!--/include show-->
                    </tbody>
                </table>
            </form>

        </div>
    </main>
<!--/Main Site-->

<!--include footer-->
    <%- include('include/_footer') %>
<!--/include footer-->